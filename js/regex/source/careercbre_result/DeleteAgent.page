{% extends 'BaseTemplate.nopage' %}
{% if USER or CONTACT_CREATED %}{% endif %}

{% block configuration %}
    {{ pageType('searchAgent') }}
{% endblock %}

{% block  navLabel %}
    <a href='{{ BASE_PORTAL_URL }}'>{{ Home|raw }}</a><span class="navlabel">{{ Delete_Agent|raw }}</span>
{% endblock %}

{% block content %}
    {% if config_useJobAlerts and (USER or CONTACT_CREATED) %}
        {% if deleted %}
            <h2 class="pageTitle1">{{ Job_alert_deleted_|raw }}</h2>
            <a href="{{ profilePage }}" class="buttonLike">{{ Back_to_profile|raw }}</a>
        {% else %}
            <h2 class="pageTitle1">{{ Delete_job_alert|raw }}</h2>
            <form class="generalForm">
                <div>
                    <input type="hidden" name="action" value="delete" />
                    <input type="hidden" name="id" value="{{ URL_QUERY.id }}" />
                </div>
                <div class="tPad1 btnGroup-2">
                    <button type="submit" value="delete">{{ Delete|raw }}</button>
                    <a href="{{ profilePage }}" title="Cancel" id="cancelButton" class='linkLike'>{{ Cancel|raw }}</a>
                </div>
            </form>
        {% endif %}
    {% else %}
        {% include 'tpt/forcedBackHome.tpt' %}
    {% endif %}
{% endblock %}
