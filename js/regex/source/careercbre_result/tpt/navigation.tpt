<p class="mainNavigationStatus">
{% if USER %}
    {{ Welcome_|raw }}
    {{ USER.personInfo.firstName ~ ' ' ~ USER.personInfo.lastName }}
    {% if not isProfile %}
    <a
        href="{{ profilePage }}"
        title="My profile"
    >{{ My_profile|raw }}</a>
    {% endif %}

{% elseif not USER and CONTACT_CREATED %}
    <a
        href="{{ choosePasswordPage }}"
        title="Create account"
    >{{ Create_account|raw }}</a>
{% endif %}
</p>
