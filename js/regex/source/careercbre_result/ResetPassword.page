{% extends 'BaseTemplate.nopage' %}
{% if USER or CONTACT_CREATED %}{% endif %}

{% block configuration %}
    {{ pageType('resetPassword') }}
{% endblock %}

{% block  navLabel %}
    <a href='{{ BASE_PORTAL_URL }}'>{{ Home|raw }}</a><span class="navlabel">{{ Reset_Password|raw }}</span>
{% endblock %}


{% block content %}
    <div class="resetPassword autoClearer">
        {% if not RESET %}
            <h2 class="pageTitle1">{{ URL_QUERY.forgotpassword == 'true' ? 'Having trouble logging in?' : 'Password reset' }}</h2>
            <div class="loginSignBox">
                {% if not URL_QUERY.forgotpassword %}
                    <p>Are you sure you want to reset your password?</p>
                {% endif %}
                <p>{{ Enter_the_email_address_associated_with_your_accou|raw }}</p>
                <p class="bPad1">{{ We_ll_email_you_a_link_to_reset_your_password_|raw }}</p>
                <form method="post" autocomplete="off" class="generalForm">
                    <div><input type="hidden" name="resetPassword" /></div>
                    <p><label for="email">Email address:</label></p>
                    <div><input type="email" name="email" id="email" value="" required="required" {% if not ISMOBILE %}autofocus="autofocus"{% endif %} /></div>
                    {% if ERROR %}<p class="errorText tPad1">{{ ERROR }}</p>{% endif %}
                    <p class="tPad1">
                        <button type="submit" value="Continue">{{ Continue|raw }}</button>
                        <a href="{{ USER ? profilePage : loginPage }}">{{ Back|raw }}</a>
                    </p>
                </form>
            </div>
        {% else %}
            <h2 class="pageTitle1">{{ Check_your_email|raw }}</h2>
            <div class="loginSignBox">
                <p class="bPad1">{{ If_the_email_address_you_entered____testing_mail_c|raw }}{{ EMAIL }}</p>
                <p class="bPad1">{{ If_you_don_t_receive_this_email__please_check_your|raw }}</p>
                <p><a href="{{ loginPage }}" class="buttonLike">{{ Login|raw }}</a></p>
            </div>
        {% endif %}
    </div>
{% endblock %}
